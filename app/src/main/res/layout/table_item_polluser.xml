<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/table_item_polluser"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:layout_margin="10dp"
              android:clickable="true"
              android:focusable="true"
              android:orientation="horizontal">

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.30">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:text="."
                android:textSize="50dp"
                android:gravity="top|right"/>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.7">

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:paddingLeft="20dp"
            android:textAlignment="textStart" />
    </RelativeLayout>
    <RelativeLayout android:layout_width="50dp" android:layout_height="match_parent"
                    android:gravity="right|top" android:layout_weight="0.1">

        <Spinner
            android:id="@+id/removeUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="0dp"
            android:background="@drawable/remove_icon"
            android:spinnerMode="dialog"/>
    </RelativeLayout>


</LinearLayout>



