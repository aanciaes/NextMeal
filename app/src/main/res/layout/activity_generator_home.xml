<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mealgenerator.GeneratorHome">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="63dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/linearLayout"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@drawable/linear_layout_border"
    >

        <ImageButton
                android:layout_width="47dp"
                android:layout_height="47dp" app:srcCompat="@drawable/back" android:id="@+id/backToHome"
                android:background="@android:color/transparent"
                android:layout_marginLeft="2dp" android:layout_marginTop="0dp"/>
        <TextView
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="Back Home" android:layout_width="wrap_content" android:textAlignment="textStart"
                android:textSize="18dp" android:layout_marginTop="5dp" android:layout_marginLeft="3dp">
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/customize"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="32dp"
        android:background="@color/greendark"
        android:padding="10dp"
        android:text="Customize Generator"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        app:layout_constraintBottom_toTopOf="@+id/random"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/random"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="64dp"
        android:background="@color/greendark"
        android:padding="10dp"
        android:text="Quick Generator"
        android:textColor="@android:color/white"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/big_example_meal"
            app:layout_constraintBottom_toTopOf="@+id/customize"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.255"/>

    <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="185dp"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.831"
            android:background="@null"
            android:src="@drawable/meal_highlight_example" app:layout_constraintTop_toBottomOf="@+id/linearLayout"
    />

    <ImageButton
            android:id="@+id/imageView3"
            android:layout_width="185dp"
            android:layout_height="195dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="50dp"

            android:scaleType="centerCrop"
            app:layout_constraintBottom_toTopOf="@+id/customize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            android:background="@null"
            android:src="@drawable/meal_highlight_example2" android:layout_marginStart="9dp"/>

</android.support.constraint.ConstraintLayout>