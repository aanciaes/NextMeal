<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="pt.unl.fct.mealroullete">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".register.RegisterActivity" />
        <activity
            android:name=".homepage.HomePage"
            android:label="@string/title_activity_home_page" />
        <activity
            android:name=".mealgenerator.GeneratorHome"
            android:label="@string/title_activity_generator_home" />
        <activity android:name=".mealgenerator.customize.AdvancedGeneratorStep1"></activity>
        <activity android:name=".mealgenerator.customize.AdvancedGeneratorStep2"></activity>
        <activity android:name=".mealgenerator.customize.RecipePresentation"></activity>
        <activity android:name=".homepage.recipe.CardFlipActivity"></activity>
        <activity
                android:name=".homepage.calculator.CalculatorActivity"
                android:label="@string/manifest_activity_calculator"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".homepage.history.HistoryActivity"
                android:label="@string/manifest_activity_history"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".homepage.recipe.RecipeActivity"
            android:label="@string/manifest_activity_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".homepage.poll.PollActivity"
                android:label="@string/manifest_activity_poll"
                android:theme="@style/AppTheme.NoActionBar" />
        <activity
                android:name=".homepage.profile.ProfileActivity"
                android:label="@string/manifest_activity_profile"
                android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>